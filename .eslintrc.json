{
  "root": true,
  "extends": ["next/core-web-vitals", "prettier"],
  "ignorePatterns": ["!src/**/*"],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "react/no-unescaped-entities": "off",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Literal[value=/fail|failure|broken|wrong|bad|error|mistake/i]",
        "message": "Consider using more encouraging language. Instead of 'fail/failure', try 'incomplete', 'in-progress', or 'needs-attention'. Psychology-first development avoids shame-based language."
      }
    ],
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-template": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "no-restricted-syntax": "off"
      }
    }
  ]
}
