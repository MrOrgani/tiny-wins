# Production Environment Configuration for Tiny Wins
# This file contains production-specific environment variables

# =============================================================================
# Application Settings
# =============================================================================
NEXT_PUBLIC_APP_NAME="Tiny Wins"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NEXT_PUBLIC_ENVIRONMENT="production"

# =============================================================================
# Production Optimizations
# =============================================================================
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"

# =============================================================================
# Psychology-First Features (Production Defaults)
# =============================================================================
NEXT_PUBLIC_ENABLE_CELEBRATIONS="true"
NEXT_PUBLIC_ENABLE_SOUNDS="true"
NEXT_PUBLIC_ENABLE_WHIMSY="true"
NEXT_PUBLIC_RESPECT_MOTION_PREFERENCES="true"

# =============================================================================
# Performance
# =============================================================================
NEXT_PUBLIC_IMAGE_OPTIMIZATION="true"
CACHE_TTL="7200"

# =============================================================================
# Security (Production Defaults)
# =============================================================================
NEXT_PUBLIC_DEBUG="false"
NEXT_PUBLIC_SHOW_DEV_TOOLS="false"

# =============================================================================
# Accessibility (Production Defaults)
# =============================================================================
NEXT_PUBLIC_DEFAULT_HIGH_CONTRAST="false"
NEXT_PUBLIC_SCREEN_READER_OPTIMIZED="true"

# =============================================================================
# Build Configuration
# =============================================================================
ANALYZE="false"
NEXT_EXPORT="false"
NEXT_STANDALONE="false"

# =============================================================================
# Monitoring
# =============================================================================
LOG_LEVEL="warn"