# Tiny Wins Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# Application Settings
# =============================================================================
NEXT_PUBLIC_APP_NAME="Tiny Wins"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# Environment
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_ENVIRONMENT="development"

# =============================================================================
# Database Configuration (if using)
# =============================================================================
# DATABASE_URL="your-database-connection-string"
# DATABASE_POOL_SIZE=10

# =============================================================================
# Authentication (if implementing)
# =============================================================================
# NEXTAUTH_SECRET="your-secret-key-here"
# NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# External Services
# =============================================================================
# Analytics
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Error Monitoring
# SENTRY_DSN=""
# SENTRY_ORG=""
# SENTRY_PROJECT=""

# Performance Monitoring
# NEXT_PUBLIC_VERCEL_SPEED_INSIGHTS_ID=""

# =============================================================================
# Psychology-First Development Features
# =============================================================================
# Enable/disable celebration animations
NEXT_PUBLIC_ENABLE_CELEBRATIONS="true"

# Enable/disable sound effects
NEXT_PUBLIC_ENABLE_SOUNDS="true"

# Enable/disable whimsy features
NEXT_PUBLIC_ENABLE_WHIMSY="true"

# Motion sensitivity settings
NEXT_PUBLIC_RESPECT_MOTION_PREFERENCES="true"

# =============================================================================
# Development Tools
# =============================================================================
# Bundle analyzer
ANALYZE="false"

# Debug mode
NEXT_PUBLIC_DEBUG="false"

# Show development tools
NEXT_PUBLIC_SHOW_DEV_TOOLS="false"

# =============================================================================
# Security
# =============================================================================
# CSRF protection
CSRF_SECRET="your-csrf-secret"

# Session configuration
SESSION_SECRET="your-session-secret"

# =============================================================================
# Feature Flags
# =============================================================================
# Enable experimental features
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS="false"
NEXT_PUBLIC_FEATURE_SOCIAL_SHARING="false"
NEXT_PUBLIC_FEATURE_HABIT_INSIGHTS="false"
NEXT_PUBLIC_FEATURE_TEAM_HABITS="false"

# =============================================================================
# Performance
# =============================================================================
# Image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION="true"

# Caching strategy
CACHE_TTL="3600"

# =============================================================================
# Accessibility
# =============================================================================
# High contrast mode default
NEXT_PUBLIC_DEFAULT_HIGH_CONTRAST="false"

# Screen reader optimizations
NEXT_PUBLIC_SCREEN_READER_OPTIMIZED="true"

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Health check endpoint
HEALTH_CHECK_TOKEN="your-health-check-token"

# Logging level
LOG_LEVEL="info"

# =============================================================================
# Build Configuration
# =============================================================================
# Static export
NEXT_EXPORT="false"

# Standalone output
NEXT_STANDALONE="false"